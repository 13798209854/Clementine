#!/usr/bin/make -f
# -*- makefile -*-

configure: configure-stamp
configure-stamp:
	dh_testdir
	cd bin && cmake .. \
	  -DCMAKE_INSTALL_PREFIX=$(CURDIR)/debian/clementine/usr \
	  -DBUNDLE_PROJECTM_PRESETS=OFF \
	  -DBUILDBOT_REVISION=@BUILDBOT_REVISION@
	touch configure-stamp

build: build-stamp
build-stamp: configure-stamp  
	dh_testdir
	cd bin && make
	touch $@

clean: 
	dh_testdir
	dh_testroot
	rm -f build-stamp configure-stamp

	-make clean
	-rm Makefile src/Makefile

	dh_clean 

install: build
	dh_testdir
	dh_testroot
	dh_prep  
	dh_installdirs
	
	cd bin && make install

binary-indep: install

binary-arch: install
	dh_testdir
	dh_testroot
	dh_installchangelogs 
	dh_installmenu
	dh_link
	dh_strip
	dh_compress
	dh_fixperms
	dh_installdeb
	dh_shlibdeps -- -xlibimobiledevice0
	dh_gencontrol
	dh_md5sums
	dh_builddeb

binary: binary-indep binary-arch
.PHONY: build clean binary-indep binary-arch binary install configure
